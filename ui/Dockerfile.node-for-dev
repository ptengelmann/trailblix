FROM node:latest

# Install network utilities and eza
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    netcat-openbsd \
    iputils-ping \
    traceroute \
    dnsutils \
    net-tools \
    && curl https://sh.rustup.rs -sSf | sh -s -- -y \
    && . $HOME/.cargo/env \
    && cargo install eza

# Set up eza aliases
RUN echo "alias ls='eza'" >> /root/.bashrc \
    && echo "alias ll='eza -l'" >> /root/.bashrc \
    && echo "alias la='eza -la'" >> /root/.bashrc \
    && echo "alias lt='eza --tree'" >> /root/.bashrc \
    && echo "alias lta='eza -la --tree'" >> /root/.bashrc

# Set working directory
WORKDIR /app

COPY package.json .
# Install dependencies
RUN npm install

# Copy the rest of the application
COPY . .

# Expose port 3000
EXPOSE 3000

# Start the application
# CMD ["node", "npm", "start"]

